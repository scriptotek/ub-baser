{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
        "plugin:chai-expect/recommended",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "browser": "readonly",
        "$": "readonly",
        "$$": "readonly",
        "describe": "readonly",
        "it": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "chai-expect"
    ],
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "standard/no-callback-literal": "off"
    },
    "overrides": [
      {
        "files": ["**/specs/bibsys.js"],
        "rules": {
          "no-unused-expressions": "off"
        }
      }
    ]
   }
